<Window x:Class="Database_Project.AddDealerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database_Project"
        mc:Ignorable="d"
        Title="AddDealerWindow" Height="325" Width="340">
    <Window.Background>
        <ImageBrush ImageSource="/img/background.png"/>
    </Window.Background>
    <Grid>
        <Grid Margin="0,0,-52,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="22*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Dealer Business Title:" HorizontalAlignment="Left" Margin="31,49,0,0" VerticalAlignment="Top"/>

            <TextBox x:Name="businessTitleUser" HorizontalAlignment="Left" Margin="171,53,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

            <Button x:Name="confirmButton" Content="Submit" HorizontalAlignment="Left" Margin="93,210,0,0" VerticalAlignment="Top" Height="44" Width="70" Click="SubmitName"/>
            <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="221,210,0,0" VerticalAlignment="Top" Height="44" Width="70" Click="cancelButton_Click"/>


        </Grid>
    </Grid>
</Window>
