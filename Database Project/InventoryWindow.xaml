<Window x:Class="Database_Project.InventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database_Project"
        mc:Ignorable="d"
        Title="InventoryWindow" Height="500" Width="800">


    <Grid Background="#FFE5E5E5" Margin="0,0,0,8">
        <DataGrid x:Name="inventoryDataGrid"  Margin="0,68,0,39" SelectionChanged="inventoryDataGrid_SelectionChanged"/>
        <Button x:Name="editButton" Content="Edit" HorizontalAlignment="Left" Margin="557,415,0,0" VerticalAlignment="Top" Height="32" Width="76" Click="editButton_Click"/>
        <Button x:Name="addButton" Content="Add New" HorizontalAlignment="Left" Margin="56,415,0,0" VerticalAlignment="Top" Height="34" Width="73" Click="addButton_Click"/>
        <Button x:Name="refreshButton"  Content="Refresh" HorizontalAlignment="Left" Margin="22,10,0,0" VerticalAlignment="Top" Height="51" Width="90" Click="refreshButton_Click"/>
    </Grid>





</Window>
